.loop:
	jmp loop

.proc copydata

.const address = $6000
.const size = 512

    lda #^address + $10 ; add on 1byte increment
    sta addr_h
    lda #>address
    sta addr_m
    lda #<address
    sta addr_l

    ; y low value
    ; x high value
    ldy #<size
    ldx #>size+1 ; +1 as we check the end when we reduce x

    lda #<tile16
    sta copydata_src + 1
    lda #>tile16
    sta copydata_src + 2

.copydata_src:
    lda $1234 ; gets modified
    sta data0

    inc copydata_src + 1
    bne noinc

    inc copydata_src + 2

.noinc:
    dey
    bne copydata_src

    dex
    beq copydata_done
    jmp copydata_src

.copydata_done:
    rts
.endproc

.proc vsync

	lda isr
	and #$02
	beq done

	lda colourswitch
	bne setcolour

	lda #$01
	sta addr_h
	lda #$fa
	sta addr_m
	stz addr_l

	stz data0

	lda #$01
	sta colourswitch

	inc offset
	;lda #8
	lda offset
	sta l0_hscroll_l
	cmp #$0f
	bne skipoffset_reset
	stz offset

.skipoffset_reset:

	lda #$ff
	sta irq_line

	lda #$02
	sta isr

.done:
	ply
	plx
	pla
	rti

.setcolour:

	lda #$01
	sta addr_h
	lda #$fa
	sta addr_m
	stz addr_l

	lda #$0a
	sta data0

	inc start
	lda start
	and #0b01111111

	sta irq_line

	stz colourswitch

	lda #$02
	sta isr

	ply
	plx
	pla
	rti

.endproc

